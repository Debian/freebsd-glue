#!/usr/bin/make -f
# -*- makefile -*-

DESTDIR = $(CURDIR)/debian/tmp
PATH := /usr/lib/freebsd:$(PATH)
PMAKE := DESTDIR="$(DESTDIR)" make

clean:
	dh_testdir
	$(PMAKE) clean
	rm -f include/machine/__get_elf_arch.h src/get_elf_arch
	dh_clean

src/get_elf_arch: src/get_elf_arch.c
include/machine/__get_elf_arch.h: src/get_elf_arch
	$^ > $@

build: build-arch
build-arch: include/machine/__get_elf_arch.h
	$(PMAKE)

build-indep:
	:

install-arch: build-arch
	dh_testdir
	dh_testroot
	dh_prep -a
	dh_installdirs -a
	mkdir -p $(DESTDIR)/usr/lib
	$(PMAKE) install SHLIBDIR=/usr/lib
	dh_install -a --list-missing

binary: binary-arch binary-indep
binary-arch: install-arch
	dh_testdir
	dh_testroot
	dh_installchangelogs -a
	dh_installdocs -a
#	dh_installexamples
#	dh_installinit
#	dh_installcron
#	dh_installinfo
#	dh_installman
	dh_link -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
#	dh_perl
#	dh_python
	dh_makeshlibs -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

binary-indep:
	:
